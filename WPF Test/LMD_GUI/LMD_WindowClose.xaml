<Window x:Class="WPF_Test.LMD_GUI.LMD_WindowClose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выход из приложения" Height="170" Width="300"
		Style="{DynamicResource ResourceKey=MyWindowStyle}" ShowInTaskbar="False" ResizeMode="NoResize">
	<Window.Effect>
		<DropShadowEffect Color="#FF31EEEE" Opacity="0.505" BlurRadius="10" Direction="400"/>
	</Window.Effect>
	<Grid>
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="При выходе из приложения, все не сохраненные данные будут потеряны."
				   VerticalAlignment="Top" FontSize="15" Margin="8,2,8,0"/>
		<Button Width="100" Height="30" Content="Хорошо" Margin="23,46,161,7" Style="{StaticResource LMD_ButtonStyle}" Click="Button_Click"/>
		<Button Width="100" Height="30" Content="Не хорошо" Margin="160,46,24,7" Style="{StaticResource LMD_ButtonStyle}" Click="Button_Click_1"/>
	</Grid>
</Window>
